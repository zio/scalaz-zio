{
  "extends": [
    "config:recommended"
  ],
  "includePaths": [
    "website/package.json"
  ],
  "enabledManagers": [
    "npm"
  ],
  "branchPrefix": "renovate/",
  "automergeType": "pr",
  "automerge": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Update Official ZIO Ecosystem Docs",
      "matchBaseBranches": [
        "series/2.x"
      ],
      "labels": [
        "dependencies",
        "documentation"
      ],
      "enabled": true,
      "matchPackageNames": [
        "@zio.dev{/,}**"
      ]
    }
  ]
}
